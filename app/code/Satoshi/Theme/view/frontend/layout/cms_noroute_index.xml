<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <move element="page.main.title" destination="custom_404"/>
        <move element="cms_noroute" destination="custom_404"/>
        <move element="cms_page" destination="custom_404"/>

        <referenceContainer name="content">
            <container name="custom_404_container" htmlTag="div" htmlClass="custom-404-container contents">
                <block name="custom_404" template="Satoshi_Theme::custom_404.phtml"/>
            </container>
        </referenceContainer>
    </body>
</page>
