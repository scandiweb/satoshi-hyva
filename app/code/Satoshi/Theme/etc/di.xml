<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:ObjectManager/etc/config.xsd">
    <type name="Magento\Framework\View\TemplateEngine\Php">
        <plugin name="utilities_template_engine_plugin"
                type="Satoshi\Theme\Plugin\TemplateEngine\SharedVariablesPlugin"/>
    </type>

    <preference
        for="Magento\Checkout\Controller\Cart\CouponPost"
        type="Satoshi\Theme\Checkout\Controller\Cart\CouponPost"
    />
    <preference
        for="Magento\Checkout\Block\Cart\Coupon"
        type="Satoshi\Theme\Checkout\Block\Cart\Coupon"
    />
    <preference
        for="Hyva\Theme\ViewModel\Currency"
        type="Satoshi\Theme\ViewModel\Currency"
    />
    <preference
        for="Magento\Theme\Block\Html\Footer"
        type="Satoshi\Theme\Block\Html\Footer"
    />
</config>
