<?xml version="1.0" encoding="UTF-8"?>
<form xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd" extends="pagebuilder_base_form">
    <argument name="data" xsi:type="array">
        <item name="js_config" xsi:type="array">
            <item name="provider" xsi:type="string">pagebuilder_satoshi_slideshow_form.pagebuilder_satoshi_slideshow_form_data_source</item>
        </item>
        <item name="label" xsi:type="string" translate="true">Guarantees</item>
    </argument>
    <settings>
        <deps>
            <dep>pagebuilder_satoshi_slideshow_form.pagebuilder_satoshi_slideshow_form_data_source</dep>
        </deps>
        <namespace>pagebuilder_satoshi_slideshow_form</namespace>
    </settings>
    <dataSource name="pagebuilder_satoshi_slideshow_form_data_source">
        <argument name="data" xsi:type="array">
            <item name="js_config" xsi:type="array">
                <item name="component" xsi:type="string">Magento_PageBuilder/js/form/provider</item>
            </item>
        </argument>
        <dataProvider name="pagebuilder_satoshi_slideshow_form_data_source" class="Magento\PageBuilder\Model\ContentType\DataProvider">
            <settings>
                <requestFieldName/>
                <primaryFieldName/>
            </settings>
        </dataProvider>
    </dataSource>

    <fieldset name="appearance_fieldset" sortOrder="10" component="Magento_PageBuilder/js/form/element/dependent-fieldset">
        <settings>
            <label translate="true">Appearance</label>
            <additionalClasses>
                <class name="admin__fieldset-visual-select-large">true</class>
            </additionalClasses>
            <collapsible>false</collapsible>
            <opened>true</opened>
            <imports>
                <link name="hideFieldset">${$.name}.appearance:options</link>
                <link name="hideLabel">${$.name}.appearance:options</link>
            </imports>
        </settings>
        <field name="appearance" formElement="select" sortOrder="10" component="Magento_PageBuilder/js/form/element/dependent-visual-select">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="default" xsi:type="string">default</item>
                </item>
            </argument>
            <settings>
                <additionalClasses>
                    <class name="admin__field-wide">true</class>
                    <class name="admin__field-visual-select-container">true</class>
                </additionalClasses>
                <dataType>text</dataType>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">true</rule>
                </validation>
                <elementTmpl>Magento_PageBuilder/form/element/visual-select</elementTmpl>
            </settings>
            <formElements>
                <select>
                    <settings>
                        <options class="AppearanceSourceSatoshi"/>
                    </settings>
                </select>
            </formElements>
        </field>
    </fieldset>

    <fieldset name="general" sortOrder="20">
        <settings>
            <label translate="true">Slideshow</label>
            <collapsible>true</collapsible>
            <opened>true</opened>
        </settings>

        <field name="slideshow_height" sortOrder="10" formElement="select" component="Magento_PageBuilder/js/form/element/visual-select">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="default" xsi:type="string">large</item>
                </item>
            </argument>
            <settings>
                <dataType>text</dataType>
                <label translate="true">Slideshow height</label>
                <elementTmpl>Magento_PageBuilder/form/element/visual-select</elementTmpl>
            </settings>
            <formElements>
                <select>
                    <settings>
                        <options class="BlockHeightSource" />
                    </settings>
                </select>
            </formElements>
        </field>

        <field name="auto_rotate" sortOrder="20" formElement="select" component="Magento_PageBuilder/js/form/element/dependent-visual-select">
            <settings>
                <dataType>text</dataType>
                <label translate="true">Auto rotate</label>
                <elementTmpl>Magento_PageBuilder/form/element/visual-select</elementTmpl>
                <dataScope>auto_rotate</dataScope>
            </settings>
            <formElements>
                <select>
                    <settings>
                        <options>
                            <option name="0" xsi:type="array">
                                <item name="size" xsi:type="string">small</item>
                                <item name="value" xsi:type="string">enabled</item>
                                <item name="title" xsi:type="string" translate="true">Enabled</item>
                            </option>
                            <option name="1" xsi:type="array">
                                <item name="size" xsi:type="string">small</item>
                                <item name="value" xsi:type="string">disabled</item>
                                <item name="title" xsi:type="string" translate="true">Disabled</item>
                            </option>
                        </options>
                    </settings>
                </select>
            </formElements>
        </field>

        <field name="slideshow_speed" sortOrder="30" formElement="input">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="default" xsi:type="string">3</item>
                    <item name="validation" xsi:type="array">
                        <item name="required-entry" xsi:type="boolean">true</item>
                        <item name="validate-number" xsi:type="boolean">true</item>
                        <item name="validate-number-range" xsi:type="string">1-10</item>
                    </item>
                </item>
            </argument>
            <settings>
                <label translate="true">Slideshow speed</label>
                <additionalClasses>
                    <class name="admin__field-small">true</class>
                </additionalClasses>
                <addAfter translate="true">s</addAfter>
                <notice translate="true">Between 1 and 10</notice>
            </settings>
        </field>

        <field name="slideshow_description" sortOrder="40" formElement="input">
            <settings>
                <label translate="true">Slideshow description</label>
                <dataType>text</dataType>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">true</rule>
                    <rule name="validate-string" xsi:type="boolean">true</rule>
                </validation>
                <notice translate="true">Describe the slideshow for customers using screen readers.</notice>
            </settings>
        </field>
    </fieldset>
</form>
