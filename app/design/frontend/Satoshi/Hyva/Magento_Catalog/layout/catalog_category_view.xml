<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceContainer name="main.content">
            <block class="Magento\Catalog\Block\Category\View" name="category.banner" template="Magento_Catalog::category/banner.phtml" before="-" />
            <block class="Magento\Framework\View\Element\Template" name="product-grid-container" template="Magento_Catalog::category/grid-container.phtml" after="category.banner" />
        </referenceContainer>

        <move element="preview.content" destination="product-grid-container"/>
        <move element="page.main.title" destination="category.banner" />

        <referenceBlock name="category.description" remove="true" />
        <referenceBlock name="category.image" remove="true" />
        <referenceBlock name="category.cms" remove="true" />

        <!-- Implement flex for PLP columns to make sidebar hide work -->
        <referenceContainer name="columns" htmlClass="overflow-hidden md:flex md:flex-row md:gap-8"/>

        <!-- Set the main content transition and dynamic class plp-main-content -->
        <referenceContainer name="main"
                            htmlClass="plp-main-content md:w-full transition-width duration-300 row-span-2 col-span-3 only:col-span-full"/>

        <!-- Implement container for sidebars on PLP -->
        <container name="div.sidebar" htmlTag="div" htmlClass="flex flex-col gap-8"/>
        <move element="div.sidebar.main" destination="div.sidebar" after="-"/>
        <move element="div.sidebar.additional" destination="div.sidebar" after="div.sidebar.main"/>
        <move element="div.sidebar" destination="columns" after="main"/>
    </body>
</page>
