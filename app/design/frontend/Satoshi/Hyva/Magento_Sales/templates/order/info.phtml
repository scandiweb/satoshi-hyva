$order = $block->getOrder();
$paymentInfo = $viewModels->require(PaymentInfo::class);
?>
<div class="mb-4 pb-4 border-b border-container">
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-4">
        <div class="w-full ">
            <p class="font-bold text-lg mb-3"><?= $escaper->escapeHtml(__('Billing Address')) ?></p>
            <div class="box-content">
                <?= /* @noEscape */ $block->getFormattedAddress($order->getBillingAddress()) ?>
            </div>
        </div>
        <?php if (!$order->getIsVirtual()): ?>
            <div class="w-full ">
                <p class="font-bold text-lg mb-3"><?= $escaper->escapeHtml(__('Shipping Address')) ?></p>
                <div class="box-content">
                    <?= /* @noEscape */ $block->getFormattedAddress($order->getShippingAddress()) ?>
                </div>
            </div>
            <div class="w-full ">
                <p class="font-bold text-lg mb-3"><?= $escaper->escapeHtml(__('Shipping Method')) ?></p>
                <div class="box-content">
                    <?php if ($order->getShippingDescription()): ?>
                        <?= $escaper->escapeHtml($order->getShippingDescription()) ?>
                    <?php else: ?>
                        <?= $escaper->escapeHtml(__('No shipping information available')) ?>
                    <?php endif; ?>
                </div>
            </div>
        <?php endif; ?>
        <div class="w-full ">
            <p class="font-bold text-lg mb-3"><?= $escaper->escapeHtml(__('Payment Method')) ?></p>
