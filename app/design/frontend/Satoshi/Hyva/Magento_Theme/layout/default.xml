<?xml version="1.0"?>
<page
    layout="3columns"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd"
>
    <!-- Injecting global variables through scripts -->
    <referenceContainer name="before.head.end">
        <block name="satoshi-head" template="Magento_Theme::head/inject-variables.phtml" />
    </referenceContainer>
    <body>
        <!-- Attributes in body element which required to show correct color of logo text -->
        <attribute name="class" value="gradient" />
        <attribute name="class" value="bg-fg" />

        <referenceContainer name="main.content"  htmlClass="page-main overflow-x-hidden"/>
        <referenceContainer name="header.container"  htmlClass="page-header contents"/>

        <referenceBlock name="header-content">
            <block name="resizable.menu" template="Satoshi_Theme::resizable.phtml">
                <arguments>
                    <argument name="id" xsi:type="string">menu-desktop</argument>
                    <argument name="initialWidth" xsi:type="number">100</argument>
                    <argument name="initialHeight" xsi:type="number">56</argument>
                    <argument name="cssClass" xsi:type="string">resizable--menu md:pointer-events-auto</argument>
                </arguments>
                <block name="menu-desktop"
                    template="Magento_Theme::html/header/menu/menu-desktop.phtml"
                />
            </block>
            <block name="resizable.search" template="Satoshi_Theme::resizable.phtml">
                <arguments>
                    <argument name="id" xsi:type="string">search-desktop</argument>
                    <argument name="initialWidth" xsi:type="number">56</argument>
                    <argument name="initialHeight" xsi:type="number">56</argument>
                    <argument name="right" xsi:type="boolean">true</argument>
                    <argument name="cssClass" xsi:type="string">resizable--search max-md:hidden md:pointer-events-auto</argument>
                </arguments>
                <block name="search-desktop"
                    template="Magento_Theme::html/header/search/search-desktop.phtml"
                />
            </block>
            <block name="resizable.minicart" template="Satoshi_Theme::resizable.phtml">
                <arguments>
                    <argument name="id" xsi:type="string">cart-desktop</argument>
                    <argument name="initialWidth" xsi:type="number">56</argument>
                    <argument name="initialHeight" xsi:type="number">56</argument>
                    <argument name="cssClass" xsi:type="string">resizable--cart max-md:hidden md:pointer-events-auto</argument>
                </arguments>
                <block  name="minicart-desktop" template="Magento_Theme::html/header/cart/minicart-desktop.phtml">
                    <block name="minicart-desktop-button" template="Magento_Theme::html/header/cart/minicart.phtml" />
                </block>
            </block>
            <block name="popup.menu" template="Satoshi_Theme::popup.phtml">
                <arguments>
                    <argument name="id" xsi:type="string">menu</argument>
                    <argument name="isFocused" xsi:type="boolean">true</argument>
                    <argument name="isFullScreen" xsi:type="boolean">true</argument>
                    <argument name="desktopTarget" xsi:type="string">menu-desktop</argument>
                </arguments>
                <block name="menu" template="Magento_Theme::html/header/menu/menu.phtml">
                    <block name="menu-items" template="Magento_Theme::html/header/menu/menu-items.phtml">
                        <arguments>
                            <argument name="id" xsi:type="string">all</argument>
                            <argument name="title" xsi:type="string">All categories</argument>
                            <argument name="path" xsi:type="string">all</argument>
                        </arguments>
                    </block>
                    <block name="search-field" template="Magento_Theme::html/header/search/search.phtml">
                        <block name="search.suggestions" template="Magento_Theme::html/header/search/search-suggestions.phtml" />
                        <block name="search.products" template="Magento_Theme::html/header/search/search-products.phtml" />
                    </block>
                </block>
            </block>
            <block name="minicart"
                template="Magento_Theme::html/header/cart/minicart.phtml"
            />
        </referenceBlock>

        <referenceBlock name="search.products">
            <block name="search.products.card" template="Magento_Catalog::product/list/item.phtml">
                <arguments>
                    <argument name="isAlpineTemplate" xsi:type="boolean">true</argument>
                    <argument name="isLarge" xsi:type="boolean">false</argument>
                </arguments>
                <block name="product.card.details" template="Magento_Catalog::product/list/item-details-article.phtml">
                    <block name="product.card.price" template="Magento_Catalog::product/view/price.phtml">
                        <arguments>
                            <argument name="isAlpineTemplate" xsi:type="boolean">true</argument>
                        </arguments>
                    </block>
                </block>
            </block>
        </referenceBlock>

        <!-- Render popup wrapper -->
        <referenceContainer name="before.body.end">
            <block name="popup-wrapper" template="Magento_Theme::html/popup/popup-wrapper.phtml" />
        </referenceContainer>
    </body>
</page>
