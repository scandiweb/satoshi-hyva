<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceContainer name="content">
            <block class="Magento\Cms\Block\Page" name="cms_page" template="Magento_Cms::page.phtml">
                <arguments>
                    <argument name="padding_top" xsi:type="number">20</argument>
                    <argument name="padding_bottom" xsi:type="number">40</argument>
                </arguments>
            </block>
        </referenceContainer>
    </body>
</page>
