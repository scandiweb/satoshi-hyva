<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceContainer name="content">
            <block name="cms_page_container" template="Magento_Cms::page.phtml" />
        </referenceContainer>

        <move element="page.main.title" destination="cms_page_container" />
        <move element="cms_page" destination="cms_page_container" />
    </body>
</page>
