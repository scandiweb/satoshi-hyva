<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" layout="2columns-left" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <update handle="catalog_list_item" />
    <body>
        <referenceContainer name="main.content">
            <block class="Magento\Framework\View\Element\Template" name="search.banner"
                   template="Magento_Catalog::search/banner.phtml" before="-">
                <block name="filter-button" as="filterButton" template="Magento_Theme::custom/filter_button.phtml"/>
            </block>
            <block class="Magento\Framework\View\Element\Template" name="product-grid-container" template="Magento_Catalog::category/grid-container.phtml" after="search.banner" />
        </referenceContainer>

        <move element="preview.content" destination="product-grid-container"/>
        <move element="page.main.title" destination="search.banner"/>

        <!-- Implement flex for search results page columns to make sidebar hide work -->
        <referenceContainer name="columns" htmlClass="overflow-hidden md:flex md:flex-row md:gap-8"/>

        <!-- Set the main content transition and dynamic class plp-main-content -->
        <referenceContainer name="main"
                            htmlClass="plp-main-content md:w-full transition-width duration-300 row-span-2 col-span-3 only:col-span-full"/>
        
        <!-- Implement container for sidebars on search results page -->
        <container name="div.sidebar" htmlTag="div" htmlClass="flex flex-col gap-8"/>
        <move element="div.sidebar.main" destination="div.sidebar" after="-"/>
        <move element="div.sidebar.additional" destination="div.sidebar" after="div.sidebar.main"/>
        <move element="div.sidebar" destination="columns" after="main"/>
    </body>
</page>
